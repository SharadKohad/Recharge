<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_600"
    tools:context=".MatchResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_contest_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/blue_grey_600">

        <ImageView
            android:id="@+id/img_back_match_result"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/ic_arrow_back"
            android:padding="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_game_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/img_back_match_result"
            android:layout_centerVertical="true"
            android:text="Match Summery"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_contest_list">

        <TextView
            android:id="@+id/textview_toss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bangladesh won the toas"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textview_wining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bangladesh won the toas"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/textview_toss"
            android:gravity="center"/>


        <TextView
            android:id="@+id/textview_team1"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="India Innings"
            android:layout_below="@+id/textview_wining"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/btn_round_green"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/textview_team2"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="India Innings"
            android:layout_below="@+id/textview_wining"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/btn_round_green"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textStyle="bold"/>


        <LinearLayout
            android:id="@+id/LL_ScoreCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/textview_team1"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content"
                    android:text="Battsman Name"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:text="R"
                    android:textColor="@color/white"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:text="W"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:text="S4"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:text="S6"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:text="SR"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RV_Batting_lineup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

            </android.support.v7.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content"
                    android:text="Bowler Name"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:text="O"
                    android:textColor="@color/white"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:text="M"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:text="R"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:text="W"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:text="E"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RV_Bowing_lineup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>