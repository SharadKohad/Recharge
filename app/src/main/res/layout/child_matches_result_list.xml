<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp"
        android:layout_marginLeft="@dimen/spacing_middle"
        android:layout_marginRight="@dimen/spacing_middle"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/ll_select_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_contest_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_team1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/australiaflag"/>

                <TextView
                    android:id="@+id/textview_team1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="AUS"
                    android:textSize="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/grey_80"
                    android:maxLength="3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_current_matches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Australia vs Sri Lanka "
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textview_match_wining_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="West Indies "
                    android:layout_gravity="center"
                    android:textColor="@color/red_600"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_team2"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/australiaflag"/>

                <TextView
                    android:id="@+id/textview_team2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="WES"
                    android:textSize="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/grey_80"
                    android:maxLength="3"/>

            </LinearLayout>

        </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp">

                <TextView
                    android:id="@+id/textview_scoreboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score Board:"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/textview_submitscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Score"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>